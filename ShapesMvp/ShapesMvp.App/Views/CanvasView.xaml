<Window x:Class="ShapesMvp.App.Views.CanvasView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShapesMvp.App.Views"
        mc:Ignorable="d"
        Title="CanvasView" Height="480" Width="640"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="MenuButton">
            <Setter Property="Control.MinWidth" Value="90"/>
            <Setter Property="Control.MinHeight" Value="20"/>
            <Setter Property="Control.HorizontalAlignment" Value="Left"/>
            <Setter Property="Control.VerticalAlignment" Value="Top"/>
        </Style>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <WrapPanel DockPanel.Dock="Top" Height="40">
                <Button Margin="10,10,0,0" Style="{StaticResource MenuButton}" Content="Add Ellipse"/>
                <Button Margin="10,10,0,0" Style="{StaticResource MenuButton}" Content="Add Rectangle"/>
                <Button Margin="10,10,0,0" Style="{StaticResource MenuButton}" Content="Add Triangle"/>
            </WrapPanel>
            <Separator DockPanel.Dock="Top"/>
            <Canvas DockPanel.Dock="Top" Background="AliceBlue"/>
        </DockPanel>
    </Grid>
</Window>
